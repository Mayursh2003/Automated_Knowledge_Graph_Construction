{
  "name": "Knowledge Graph Builder",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py",
        "requirements.txt"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "editor.formatOnSave": true,
        "editor.rulers": [80, 100],
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "bierner.graphviz",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "visualstudioexptteam.vscodeintellicode",
        "yzhang.markdown-all-in-one",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        "mechatroner.rainbow-csv"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "updateContentCommand": [
    "apt-get update",
    "apt-get install -y graphviz graphviz-dev",
    "pip3 install --upgrade pip",
    "pip3 install --user -r requirements.txt",
    "pip3 install --user streamlit plotly networkx pyvis rdflib black pylint pytest jupyter",
    "echo 'âœ… Packages installed and Requirements met'"
  ],
  "postCreateCommand": "echo 'Development environment setup complete!'",
  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    },
    "8888": {
      "label": "Jupyter",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [8501, 8888],
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "STREAMLIT_SERVER_PORT": "8501",
    "STREAMLIT_SERVER_ADDRESS": "0.0.0.0"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--memory=4g",
    "--cpus=2"
  ]
}